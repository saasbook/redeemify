<% if flash[:error].present? %>
  <div class="flash_error">
    <% flash.keys.each do |key| %> 
       <%= flash[key] %>
    <% end %>
  </div>
<% end %>

<% if flash[:notice].present? %>
  <div class="notice">
    <% flash.keys.each do |key| %>
      <%= flash[key] %>
      <% end %> 
  </div>
<% end %>
